// use require-prior-idle-ms for combos
#undef COMBO_HOOK
#define COMBO_HOOK require-prior-idle-ms = <150>;

#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

// make homerow combos tap-only (so HRMs can be chorded instantaneously)
#define LOG_OFF    &kp          LC(LG(Q))

/* Horizontal combos - left hand */
ZMK_COMBO(l_def,      &to DEF,       LM4 LM3,         ALPH SYM NUM, COMBO_TERM_FAST)
ZMK_COMBO(l_log_off,  LOG_OFF,       LB4 LB3,     DEF ALPH SYM NUM, COMBO_TERM_FAST)

/* Horizontal combos - right hand */
ZMK_COMBO(r_def,      &to DEF,       RM4 RM3,         ALPH SYM NUM, COMBO_TERM_FAST)
ZMK_COMBO(r_log_off,  LOG_OFF,       RB4 RB3,     DEF ALPH SYM NUM, COMBO_TERM_FAST)

